<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>PrechargementFilter</filter-name>
        <filter-class>com.tb.filters.PrechargementFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PrechargementFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.tb.config.InitialisationDAOFactory</listener-class>
    </listener>
    <servlet>
        <servlet-name>CreationFournisseur</servlet-name>
        <servlet-class>com.tb.servlets.CreationFournisseur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuppressionFournisseur</servlet-name>
        <servlet-class>com.tb.servlets.SuppressionFournisseur</servlet-class>
    </servlet>
      <servlet>
        <servlet-name>ModificationFournisseur</servlet-name>
        <servlet-class>com.tb.servlets.ModificationFournisseur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListeFournisseurs</servlet-name>
        <servlet-class>com.tb.servlets.ListeFournisseurs</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreationFournisseur</servlet-name>
        <url-pattern>/CreationFournisseur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuppressionFournisseur</servlet-name>
        <url-pattern>/SuppressionFournisseur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificationFournisseur</servlet-name>
        <url-pattern>/ModificationFournisseur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListeFournisseurs</servlet-name>
        <url-pattern>/ListeFournisseurs</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/WEB-INF/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
